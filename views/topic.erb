<div class="container">
   <div class="page-header">
     <h1> <%= topic.title %> </h1>
   </div>
  <%= topic.body  %>
 
  <br>
  <form method="POST" action="/topics/<%= topic.id %>/comment">
    <textarea name="body" class="form-control"></textarea>
    <br>
    <button type="submit" class="btn btn-success">Comenta</button>
  </form>
  <br>
  
  
  <% topic.comments.each do |comment| %>
  <p> <%= comment.body %> </p>
  <% end %>
</div>